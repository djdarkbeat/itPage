/* global */
#cluetip-close img {
  border: 0;
}
#cluetip-title #cluetip-close {
  float: right;
  position: relative;
}
#cluetip-waitimage {
  width: 43px;
  height: 11px;
  position: absolute;
  background-image: url(/site/images/wait.gif);
}
